    "/orders": {
      "get": {
        "tags": ["Orders"],
        "summary": "Get all orders",
        "description": "Retrieve a list of all orders. **Unit Tested**",
        "responses": {
          "200": {
            "description": "Successful operation - Returns array of orders",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "_id": {"type": "string"},
                  "userId": {"type": "string"},
                  "products": {"type": "array"},
                  "total": {"type": "number"},
                  "status": {"type": "string"},
                  "createdAt": {"type": "string", "format": "date-time"}
                }
              }
            }
          },
          "500": {"description": "Internal server error"}
