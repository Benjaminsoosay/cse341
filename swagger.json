      "post": {
        "tags": ["Orders"],
        "summary": "Create a new order",
        "description": "Create a new order.<br>**Data Validation:** userId required, products array with quantity ‚â• 1<br>**Error Handling:** Returns 400 for validation errors, 409 if insufficient stock",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["userId", "products"],
              "properties": {
                "userId": {
                  "type": "string",
                  "example": "507f1f77bcf86cd799439011",
                  "description": "ID of the user placing the order"
                },
                "products": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["productId", "quantity"],
                    "properties": {
                      "productId": {
                        "type": "string",
                        "example": "507f1f77bcf86cd799439012"
                      },
                      "quantity": {
                        "type": "integer",
                        "minimum": 1,
                        "example": 2
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {"description": "Order created successfully"},
          "400": {
            "description": "Validation Error - Missing userId or invalid product quantities",
            "schema": {
              "type": "object",
              "properties": {
                "error": {"type": "string", "example": "Validation failed"},
                "message": {"type": "string", "example": "Quantity must be at least 1"}
              }
            }
          },
          "409": {"description": "Conflict - Insufficient stock available"},
          "500": {"description": "Internal server error"}
        }
      }
    },
    
